<Window x:Class="WpfApp1.SubjectsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Subjects" 
        Height="720"
        Width="1280"
        MinWidth="300" 
        MinHeight="200"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <ListView Name="SubjectsListView" Margin="10" SelectionChanged="SubjectsListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Subject Name" DisplayMemberBinding="{Binding SubjectName}" Width="200"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>